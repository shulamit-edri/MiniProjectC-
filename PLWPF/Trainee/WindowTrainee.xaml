        <Button x:Name="BtUpadateTrainee" Content="Update Trainee" HorizontalAlignment="Center" Margin="121,253,108.333,0" VerticalAlignment="Top" Width="564" Height="72" Click="Button_ClickUpdateTrainee" FontSize="30" FontFamily="Rockwell Nova Cond Light" Background="#FFF8F9FA"/>



    </Grid>
